@if (ChartKills)
{
	@foreach (var team in State.RankByKills())
	{
		<div style="background-color: @team.Color;" class="text-light ps-3">
			<span>@team.Name</span>
			<span>Kills: @(team.Kills)</span>
		</div>
	}
}
else
{
	@foreach (var team in State.RankByLastStanding())
	{
		<div style="background-color: @team.Color;" class="text-light ps-3">
			<span>@team.Name</span>
			<span>Units: @(State.Units.Where(u => u != null && u.Team == team.Id).Count())</span>
		</div>
	}
}


@code {
	[Parameter]
	public required GameState State { get; set; }
	[Parameter]
	public required bool ChartKills { get; set; }



}
